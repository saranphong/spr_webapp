ion v-for=\"rubberGrade in rubber_grade\" :key=\"rubberGrade.id\"\r\n                                             :value=\"rubberGrade.id\">\r\n                                             {{ rubberGrade.rub_grade_name }}\r\n                                        </option>\r\n                                   </select>\r\n                              </div>\r\n                              <label>ราคาเงินสด</label>\r\n                              <div class=\"input-group mb-2\">\r\n                                   <input type=\"number\" class=\"form-control\" required\r\n                                        v-model=\"this.fixCostData_edit.price1\" id=\"price1\" />\r\n                                   <span class=\"input-group-text\">บาท</span>\r\n                              </div>\r\n                              <label>ราคาเงินสด+จัดส่ง</label>\r\n                              <div class=\"input-group mb-2\">\r\n                                   <input type=\"number\" class=\"form-control\" required\r\n                                        v-model=\"this.fixCostData_edit.price2\" />\r\n                                   <span class=\"input-group-text\">บาท</span>\r\n                              </div>\r\n                         </form>\r\n                    </div>\r\n                    <div class=\"modal-footer\">\r\n                         <button type=\"button\" class=\"btn btn-secondary\"\r\n                              @click.prevent=\"this.func.hideModal('editfixCost')\">ปิด</button>\r\n                         <button type=\"button\" class=\"btn btn-primary\" @click.prevent=\"editFixCost()\">บันทึก</button>\r\n                         <!-- {{ this.fixCostData_edit }} -->\r\n                    </div>\r\n               </div>\r\n          </div>\r\n     </div>\r\n     <!-- สิ้นสุดการแก้ไขข้อมูล -->\r\n\r\n     <!-- ส่วนของ Datatable แสดงรายการข้อมูล -->\r\n     <div class=\"card border-dark shadow-lg\" style=\"width: 100%\">\r\n          <div class=\"card-header bg-primary\" style=\"color:white;\">\r\n               ::: แสดงรายการ-ราคาสินค้า :::\r\n          </div>\r\n          <div class=\"card-body\">\r\n               <table id=\"showproductcost\" class=\"ms-2 table table-striped table-hover table-sm\"\r\n                    style=\"width: 100%; align-items: center\">\r\n                    <thead>\r\n                         <tr>\r\n                              <th>ลำดับ</th>\r\n                              <th>ประเภทการผลิต</th>\r\n                              <th>รูปแบบการผลิต</th>\r\n                              <th>ขนาด</th>\r\n                              <th>ลายดอก</th>\r\n                              <th>เกรดยาง</th>\r\n                              <th>เงินสด</th>\r\n                              <th>เงินสด+ส่ง</th>\r\n                              <th>\r\n                                   <button class=\"btn btn-success btn-sm me-md-2\" @click.prevent=\"clearSelect2(); this.func.showModal('fixCost');\r\n                                   onSelect2_1()\">\r\n                                        <!-- ปุ่มเพิ่มข้อมูล -->\r\n                                        <font-awesome-icon icon=\"fa-solid fa-plus\" />\r\n                                        <!-- <font-awesome-icon icon=\"fa-solid fa-user-plus\" /> -->\r\n                                   </button>\r\n                              </th>\r\n                         </tr>\r\n                    </thead>\r\n                    <tbody class=\"table-group-divider\">\r\n                         <tr v-for=\"rec in pro_price_row\" :key=\"rec.fixcost_auto_id\" @click.prevent=\"getFixCost(rec)\">\r\n                              <td>{{ rec.fixcost_auto_id }}</td>\r\n                              <td>{{ rec.pro_type_name }}</td>\r\n                              <td>{{ rec.pro_detail }}</td>\r\n                              <td>{{ rec.rub_size_id }}</td>\r\n                              <td>{{ rec.rub_style_detail }}</td>\r\n                              <td>{{ rec.rub_grade_name }}</td>\r\n                              <td>{{ this.numFormat(rec.price1) }}</td>\r\n                              <td>{{ this.numFormat(rec.price2) }}</td>\r\n                              <td style=\"text-align: left\">\r\n                                   <button id=\"edit\" type=\"button\" class=\"btn btn-primary btn-sm me-md-2\"\r\n                                        @click.prevent=\"getFixCost(rec)\">\r\n                                        <!-- ปุ่มแก้ไขข้อมูล -->\r\n                                        <font-awesome-icon icon=\"fa-solid fa-pen\" />\r\n                                        <!-- <font-awesome-icon icon=\"fa-solid fa-user-pen\" /> -->\r\n                                   </button>\r\n                              </td>\r\n                         </tr>\r\n                    </tbody>\r\n               </table>\r\n          </div>\r\n     </div>\r\n     <!-- สิ้นสุดการแสดงข้อมูล -->\r\n</template>\r\n\r\n<script>\r\nimport axios from \"@/axios\";\r\nimport $ from \"jquery\";\r\nimport func from \"../func.js\"\r\n\r\nexport default {\r\n     name: \"FixCost\",\r\n     components: {\r\n          // autocomplete\r\n     },\r\n     data() {\r\n          return {\r\n               func: func,\r\n               product_detail: [],\r\n               pro_price_row: [],\r\n               rubber_size: [],\r\n               rubber_style: [],\r\n               rubber_grade: [],\r\n               fixCostData: {\r\n                    fixcost_auto_id: \"\",\r\n                    pro_type_id: \"\", // link to product_type.pro_type_id\r\n                    pro_de_no: \"\", // link to product_detail.pro_de_no\r\n                    rub_size_no: \"\",\r\n                    rub_style_id: \"\",\r\n                    rub_grade_no: \"\",\r\n                    price1: \"\",\r\n                    price2: \"\",\r\n               },\r\n               fixCostData_edit: {\r\n                    fixcost_auto_id: \"\",\r\n                    pro_type_id: \"\", // link to product_type.pro_type_id\r\n                    pro_de_no: \"\", // link to product_detail.pro_de_no\r\n                    rub_size_no: \"\",\r\n                    rub_style_id: \"\",\r\n                    rub_grade_no: \"\",\r\n                    price1: \"\",\r\n                    price2: \"\",\r\n               },\r\n          };\r\n     },\r\n     beforeUnmount() {\r\n          sessionStorage.clear();\r\n     },\r\n     created() {\r\n\r\n     },\r\n     mounted() {\r\n          this.loadDefaultData();\r\n          // this.onSelect2();\r\n     },\r\n     methods: {\r\n          clearSelect2() {\r\n               $(document).ready(() => {\r\n                    $('#findSize1').val('');\r\n               });\r\n          },\r\n          onSelect2_1() {\r\n               $(document).ready(() => {\r\n                    let rec = this.fixCostData;\r\n                    $('#findSize1').select2({\r\n                         theme: \"bootstrap-5\",\r\n                         closeOnSelect: true,\r\n                         width: '100%',\r\n                         dropdownParent: $(\"#findSize1\").parent(),\r\n                         placeholder: \"--- เลือกขนาดยาง ---\",\r\n                    });\r\n                    $('#findSize1').on('select2:select', (e) => {\r\n                         let data = e.params.data;\r\n                         rec.rub_size_no = data.id;\r\n                    })\r\n               });\r\n          },\r\n          onSelect2_2() {\r\n               $(document).ready(() => {\r\n                    let rec = this.fixCostData_edit;\r\n                    $('#findSize2').select2({\r\n                         theme: \"bootstrap-5\",\r\n                         closeOnSelect: true,\r\n                         width: '100%',\r\n                         dropdownParent: $('#findSize2').parent(),\r\n                         placeholder: \"--- เลือกขนาดยาง ---\",\r\n   